<project name="jaxb-taskdefs" basedir=".">
  <description>
    Common task/macro definitions.
  </description>

  <!-- architecture document generator -->
  <macrodef name="arch-doc">
    <element name="params"/>
    <attribute name="title"/>
    <attribute name="destdir"/>
    <attribute name="access" default="package" />
    <sequential>
      <ant dir="tools/taglets" target="compile"/>
      <mkdir dir="@{destdir}"/>
      <javadoc
        destdir="@{destdir}"
        use="true"
        author="false"
        version="false"
        windowtitle="@{title}"
        doctitle="@{title}"
        access="@{access}">
        <!--arg line="-J-Xdebug -J-Xrunjdwp:transport=dt_socket,server=y,address=8000" /-->

        <doclet name="com.sun.xml.bind.taglets.CustomHtmlDoclet"
          path="${jaxb.root}/tools/taglets/build/classes">
        </doclet>
        <arg value="-quiet"/>

        <params/>

        <link href="https://jaxb.dev.java.net/nonav/jaxb20-pr/api/"
          offline="true" packagelistloc="${jaxb.root}/tools/javadoc-link/jaxb-api"/>
        <link href="http://java.sun.com/j2se/1.5.0/docs/api/"
          offline="true" packagelistloc="${jaxb.root}/tools/javadoc-link/j2se5.0"/>
        <link href="https://xsom.dev.java.net/nonav/javadoc/"
          offline="true" packagelistloc="${jaxb.root}/tools/javadoc-link/xsom"/>

        <classpath>
          <fileset dir="${jaxb.libs}/" includes="**/*.jar"/>
        </classpath>
      </javadoc>
    </sequential>
  </macrodef>
  
  <!--
    import files to CVS
    
    For example, <cvs-import src="build/doc" dest="jaxb/www/doc" />
  -->
  <macrodef name="cvs-import">
    <attribute name="src"/>
    <attribute name="dest"/>
    <attribute name="cvsroot"/>
    <sequential>
      <tstamp />
      <echo>importing to CVS...</echo>
      <cvs dest="@{src}">
        <commandline>
          <argument value="-d@{cvsroot}"/>
          <argument line="-z9 import -ko"/>
          <argument value="-W"/>
          <argument line="*.jar -kb"/>
          <argument value="-m"/>
          <argument value="deploying new jars to the java.net maven repository"/>
          
          <argument value="@{dest}"/>
          <argument line="deployment-to-maven-repository t${DSTAMP}${TSTAMP}" />
        </commandline>
      </cvs>
    </sequential>
  </macrodef>
  
