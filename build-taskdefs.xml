<project name="jaxb-taskdefs" basedir=".">
  <description>
    Common task/macro definitions.
  </description>

  <!-- architecture document generator -->
  <macrodef name="arch-doc">
    <element name="params"/>
    <attribute name="title"/>
    <attribute name="destdir"/>
    <attribute name="access" default="package" />
    <sequential>
      <ant dir="tools/taglets" target="compile"/>
      <mkdir dir="@{destdir}"/>
      <javadoc
        destdir="@{destdir}"
        use="true"
        author="false"
        version="false"
        windowtitle="@{title}"
        doctitle="@{title}"
        access="@{access}">
        <!--arg line="-J-Xdebug -J-Xrunjdwp:transport=dt_socket,server=y,address=8000" /-->

        <doclet name="com.sun.xml.bind.taglets.CustomHtmlDoclet"
          path="${jaxb.root}/tools/taglets/build/classes">
        </doclet>
        <arg value="-quiet"/>

        <params/>

        <link href="https://jaxb.dev.java.net/nonav/jaxb20-pr/api/"
          offline="true" packagelistloc="${jaxb.root}/tools/javadoc-link/jaxb-api"/>
        <link href="http://java.sun.com/j2se/1.5.0/docs/api/"
          offline="true" packagelistloc="${jaxb.root}/tools/javadoc-link/j2se5.0"/>
        <link href="https://xsom.dev.java.net/nonav/javadoc/"
          offline="true" packagelistloc="${jaxb.root}/tools/javadoc-link/xsom"/>

        <classpath>
          <fileset dir="${jaxb.libs}/" includes="**/*.jar"/>
        </classpath>
      </javadoc>
    </sequential>
  </macrodef>
  
  <!--
    import files to CVS
    
    For example, <cvs-import src="build/doc" dest="jaxb/www/doc" />
  -->
  <macrodef name="cvs-import">
    <attribute name="src"/>
    <attribute name="dest"/>
    <attribute name="cvsroot"/>
    <sequential>
      <tstamp />
      <echo>importing to CVS...</echo>
      <cvs dest="@{src}">
        <commandline>
          <argument value="-d@{cvsroot}"/>
          <argument line="-z9 import -ko"/>
          <argument value="-W"/>
          <argument line="*.jar -kb"/>
          <argument value="-m"/>
          <argument value="deploying new jars to the java.net maven repository"/>
          
          <argument value="@{dest}"/>
          <argument line="deployment-to-maven-repository t${DSTAMP}${TSTAMP}" />
        </commandline>
      </cvs>
    </sequential>
  </macrodef>
  
  
  <!--
    generates documentation by TOC processor
  -->
  <macrodef name="generate-docs">
    <element name="source" />
    <attribute name="dest" />
    <sequential>
      <copy todir="@{dest}" overwrite="true">
          <source />
      </copy>
      
      <!-- generate a list of sample applications in the distribution -->
      <taskdef name="dirListGen" classname="com.sun.tools.tocproc.DirectoryListGenerator">
        <classpath>
          <fileset dir="${jaxb.libs.util}" includes="**/*.jar"/>
        </classpath>
      </taskdef>
      <dirListGen dir="${jaxb.root}/samples/work" dest="build/samples.xml" />
      
      
      <taskdef name="htmlmacro" classname="com.sun.wts.tools.htmlmacro.HtmlMacroTask">
        <classpath>
          <pathelement path="tools/htmlmacro/htmlmacro.jar" />
        </classpath>
      </taskdef>
      <htmlmacro destdir="@{dest}">
        <documents dir="docs" includes="*.html" excludes="catalog.html" />
        <tags dir="tools/htmlmacro/tags" includes="**/*.tag" />
        <property file="build.properties"/>
        <property key="IMPL_VERSION"        value="${release.impl.version}" />
        <property key="IMPL_VERSION_SUFFIX" value="${release.impl.version.suffix}" />
        <property key="JWSDP_VERSION"       value="${jwsdp.impl.version}"/>
        <property key="JWSDP_ROOTDIR"       value="${jwsdp.root.directory}"/>
      </htmlmacro>
      <copy file="docs/catalog.html" todir="@{dest}"/>
      
      <!--replace dir="@{dest}">
          <include name="**/*.html"/>
          <replacefilter token="@@@@SPEC_VERSION@@@@"
                         value="${release.spec.version}" />
          <replacefilter token="@@@@IMPL_VERSION@@@@"
                         value="${release.impl.version}"/>
          <replacefilter token="@@@@IMPL_VERSION_SUFFIX@@@@"
                         value="${release.impl.version.suffix}"/>
          <replacefilter token="@@@@JWSDP_VERSION@@@@"
                         value="${jwsdp.impl.version}"/>
          <replacefilter token="@@@@JWSDP_ROOTDIR@@@@"
                         value="${jwsdp.root.directory}"/>
      </replace>
      <delete file="@{dest}/toc.xml"/>
      <delete file="@{dest}/samples.xml"/-->
    </sequential>
  </macrodef>

  <!-- package rename task -->
  <taskdef name="prename" classname="com.sun.wts.tools.ant.PackageRenameTask">
    <classpath>
      <pathelement path="${jaxb.root}/tools/lib/util/package-rename-task.jar" />
    </classpath>
  </taskdef>

  <macrodef name="package-rename">
    <attribute name="srcdir" />
    <attribute name="destdir" />
    <sequential>
      <prename srcdir="@{srcdir}" destdir="@{destdir}">
        <pattern from="com.sun.codemodel" to="com.sun.codemodel.internal" />
        <pattern from="com.sun.xml" to="com.sun.xml.internal" />
        <pattern from="com.sun.xsom" to="com.sun.internal.xsom" />
        <pattern from="com.sun.txw2" to="com.sun.internal.txw2" />
        <pattern from="com.sun.istack" to="com.sun.istack.internal" />
	<pattern from="org.kohsuke.rngom" to="com.sun.xml.internal.rngom" />
        <pattern from="org.jvnet.fastinfoset" to="com.sun.xml.internal.org.jvnet.fastinfoset" />
      </prename>
    </sequential>
  </macrodef>
</project>
