#
# Script to run xjc
#
WEBSERVICES_LIB=%WEBSERVICES_LIB%

#
# Set CLASSPATH
#
CLASSPATH=${WEBSERVICES_LIB}/jaxb-api.jar:${WEBSERVICES_LIB}/jaxb-impl.jar:${WEBSERVICES_LIB}/jaxb1-impl.jar:${WEBSERVICES_LIB}/jaxb-xjc.jar

if [ -n "$JAVA_HOME" ]
then
    JAVA=$JAVA_HOME/bin/java
else
    JAVA=java
fi
 
$JAVA $XJC_OPTS -cp "$CLASSPATH" com.sun.tools.xjc.Driver "$@"
